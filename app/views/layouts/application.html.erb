<!DOCTYPE html>
<html>
  <head>
    <title>Bookers22</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class= "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class = "container">
          <%= link_to 'Bookers', '/', class: "navbar-brand" %>
          <div class = "collapse navbar-collapse" id = "navbarNavDoropdown">
            <ul class = "navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li>
                <%= link_to ' Home', user_path, class: 'fas fa-home nav-link text-light text-white' %>
              </li>
              <li>
                <%= link_to ' Users', users_path, class: 'fas fa-users nav-link text-light text-white' %>
              </li>
              <li>
                <%= link_to ' Books', books_path, class: 'fas fa-book-open nav-link text-light text-white' %>
              </li>
              <li>
                <%= link_to " logout", destroy_user_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light text-white' %>
              </li>
              <% else %>
              <li>
                <%= link_to ' Home', '/', class: 'fas fa-home nav-link text-light text-white' %>
              </li>
              <li>
                <%= link_to ' About', "home/about", class: 'fas fa-link nav-link text-light text-white' %>
              </li>
              <li>
                <%= link_to " signup", new_user_registration_path, class: 'fas fa-user-plus nav-link text-light text-white' %>
              </li>
              <li>
                <%= link_to " login", new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-light text-white' %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
     <div class="container mt-5">
  	   <div class="row">
    	   <div class="mx-auto">
    		   <p>CopyRight Infratop.inc</p>
    	   </div>
       </div>
     </div>
   </footer>
  </body>
</html>
